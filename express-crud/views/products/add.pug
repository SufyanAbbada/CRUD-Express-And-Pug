extends ../layout

block content
    h1 Add New Product.
    <form action="/products/add" method="post">
        <div class="form-group">
            <label for="Product-Name">New Product Name</label>
            <input type="text" class="form-control" id="Product-Name" name="name" aria-describedby="namehelp">
            <small id="namehelp" class="form-text text-muted">Example: Mercedes Benz</small>
        </div>
        <div class="form-group">
            <label for="price">Product Price</label>
            <input type="text" class="form-control" id="price" name="price">
        </div>
        <button type="submit" class="btn btn-danger">Add It</button>
    </form>